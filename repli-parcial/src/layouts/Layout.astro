---
import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Kinsta</title>
	</head>
	<body class="bg-[#e9e9e9]">
		<header class="p-5 px-12 bg-black text-white flex items-center justify-between gap-8">
			<div class="flex items-center gap-36">
				<h1 class="text-4xl font-medium">KINSTA</h1>

				<div class="options flex bg-[#2d3035] p-1 rounded uppercase items-center gap-2 ">
					<Icon name="f7:building" />
					<p class="text-sm hover:cursor-pointer">buildings</p>
					<Icon size="15px" name="f7:chevron-down" class="hover:cursor-pointer"/>
				</div>

			</div>
			<div class="flex items-center gap-7">
				<Icon size="24px" name="f7:bell" />
				<span class="flex items-center gap-1">
					<Icon size="24px" name="f7:folder" />
					<p>Docs</p>
				</span>
				<span class="flex items-center gap-2">
					<p class="flex justify-center items-center hover:cursor-default bg-[#3f4ed3] text-white size-8 text-lg rounded">
						K
					</p>
					<p class="hover:cursor-default">Kinsta user</p>
					<Icon size="15px" name="f7:chevron-down" class="hover:cursor-pointer"/>
				</span>
			</div>
		</header>
		<main class="flex p-10 gap-3">
			<ul class="text-[#646464] font-semibold w-[250px] h-max p-5 grid gap-2">
				<a href="/"><li class="hover:bg-[#dbdbdb] p-1 rounded flex items-center gap-1"><Icon name="cuida:dashboard-outline" />Dashboard</li></a>
				<a href="/applications"><li class="hover:bg-[#dbdbdb] p-1 rounded flex items-center gap-1"><Icon name="f7:cube" />Applications</li></a>
				<a href="/worldpress"><li class="hover:bg-[#dbdbdb] p-1 rounded flex items-center gap-1"><Icon name="mdi:world" />WordPress Sities</li></a>
				<a href="/dns"><li class="hover:bg-[#dbdbdb] p-1 rounded flex items-center gap-1"><Icon name="material-symbols:dns-outline" />DNS</li></a>
			</ul>
			<slot/>

		</main>
	</body>
</html>


